
<div class ="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="well text-center">

        <div class ="text-center"><h2>Add Savings</h2></div>
        <%= form_for (saving), url: user_savings_path do |f| %>
        
          <% if saving.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(saving.errors.count, "error") %> prohibited this saving from being saved:</h2>
        
              <ul>
              <% saving.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
        
        
          <div class="form-group">
            <%= f.label 'Entry Date' %>
            <%= f.date_field :week,:value => Time.now.strftime("%Y-%m-%d"), class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label 'Amount Saved' %>
            <%= f.text_field :amount, class: 'form-control' %>
          </div>
        
        
        
          <div class="actions">
            <%= f.submit %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>